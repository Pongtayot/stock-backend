# Set logging file path
logging.file.path=./logs

# Configure logback appender for file output
logging.file.name=${logging.file.path}/spring-boot-logger.log
logging.logback.rollingpolicy.file-name-pattern=${logging.file.path}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log
logging.logback.rollingpolicy.max-file-size=10MB

# Set logging level for root logger
logging.level.root=info

